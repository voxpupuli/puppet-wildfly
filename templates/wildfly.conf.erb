# General configuration for the init.d scripts,
# not necessarily for JBoss AS itself.
# default location: /etc/default/wildfly

# Location of JDK
#
JAVA_HOME="<%= scope.lookupvar('wildfly::java_home') %>"

# Location of WildFly
#
JBOSS_HOME="<%= scope.lookupvar('wildfly::dirname') %>"

# The username who should own the process.
#
JBOSS_USER="<%= scope.lookupvar('wildfly::user') %>"

# The mode WildFly should start, standalone or domain
#
JBOSS_MODE="<%= scope.lookupvar('wildfly::mode') %>"

# Configuration for standalone mode
#
JBOSS_CONFIG="<%= scope.lookupvar('wildfly::config') %>"

# Configuration for domain mode
#
JBOSS_DOMAIN_CONFIG="<%= scope.lookupvar('wildfly::domain_config') %>"
JBOSS_HOST_CONFIG="<%= scope.lookupvar('wildfly::host_config') %>"

# The amount of time to wait for startup
#
STARTUP_WAIT="30"

# The amount of time to wait for shutdown
#
SHUTDOWN_WAIT="30"

# Location to keep the console log
#
JBOSS_CONSOLE_LOG="<%= scope.lookupvar('wildfly::console_log') %>"

# Startup script options
#
JBOSS_OPTS="-Djboss.bind.address=<%= scope.lookupvar('wildfly::public_bind') %> -Djboss.bind.address.management=<%= scope.lookupvar('wildfly::mgmt_bind') %> -Djboss.management.http.port=<%= scope.lookupvar('wildfly::mgmt_http_port') %> -Djboss.management.https.port=<%= scope.lookupvar('wildfly::mgmt_https_port') %> -Djboss.http.port=<%= scope.lookupvar('wildfly::public_http_port') %> -Djboss.https.port=<%= scope.lookupvar('wildfly::public_https_port') %> -Djboss.ajp.port=<%= scope.lookupvar('wildfly::ajp_port') %>"
